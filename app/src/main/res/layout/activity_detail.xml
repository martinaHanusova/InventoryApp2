<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical"
    tools:context=".DetailActivity">
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="@dimen/detail_main_label_font_size"
        android:layout_marginBottom="@dimen/detail_main_label_margin_bottom"
        tools:text="Eragon"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/book"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/quantity_price_layout_margin">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/quantity_label"
                style="@style/label_detail"
                android:text="Quantity"/>
            <TextView
                android:id="@+id/quantity"
                android:layout_below="@+id/quantity_label"
                tools:text="30"
                style="@style/value_quantity_price"/>
            <Button
                android:id="@+id/decrease_quantity_button"
                android:layout_toLeftOf="@id/quantity"
                style="@style/button_increase_decrease"
                android:text="-"/>
            <Button
                android:id="@+id/increase_quantity_button"
                android:layout_toRightOf="@id/quantity"
                android:text="+"
                style="@style/button_increase_decrease" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/price_label"
                android:text="Price"
                style="@style/label_detail" />
            <TextView
                android:id="@+id/price"
                android:layout_below="@+id/price_label"
                style="@style/value_quantity_price"
                tools:text="30"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Supplier"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/detail_secondary_label_margin_bottom"
        android:textSize="@dimen/detail_secondary_label_font_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/colorFontPrimary"
            android:text="Name:"/>
        <TextView
            android:id="@+id/supplier_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="Martina Adamusova"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/button_call_size"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/colorFontPrimary"
            android:text="Phone:"/>
        <TextView
            android:id="@+id/supplier_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_call_size"
            android:layout_weight="4"
            android:gravity="center_vertical"
            tools:text="777 888 487"/>
        <ImageButton
            android:id="@+id/button_call"
            android:layout_width="@dimen/button_call_size"
            android:layout_height="@dimen/button_call_size"
            android:background="@drawable/button_rounded"
            android:textColor="@color/colorWhite"
            android:src="@drawable/ic_phone"/>
    </LinearLayout>
</LinearLayout>